@*@{
        ViewBag.Title = "Home Page";
    }*@

@{
    Layout = "~/Views/shared/_layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный магазин</title>
</head>
<body>
    <div>

            <h3>Покупки пользователя @ViewBag.UserName</h3>
        
        <table>
            <tr>
                <td><p>Название книги</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.B)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Price</p></td>
                </tr>
            }

        </table>
    </div>
</body>
</html>